<h4 class="sub-title">Edit User</h4>

<%= form_with(model: @user, local: true) do |f| %>

<div class="container-fluid"><font size="2">
  <div class="top">
  <br><br><br><br><br><br><br><br>
    <div class="row">
      <table>
        <tr>
          <td class="box_image">
            <%= image_tag(@user.image.url) if @user.image && @user.image.url %>
            <%= f.file_field :image %>
            <%= f.hidden_field :image_cache %>
          </td>

          <td class="box_text">
            <p>
              <span><%= f.label :name, 'User Name :', class: "text" %></span>
              <span><%= f.text_field :name, class: "text_field" %></span>
            </p>
            <p>
              <span><%= f.label :email, 'Email :', class: "text" %></span>
              <span><%= f.text_field :email, class: "text_field" %></span>
            </p>
            <p>
              <span><%= f.label :password, 'Password :', class: "text" %></span>
              <span><%= f.text_field :password, class: "text_field" %></span>
            </p>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
<br> <br>
<a><%= f.submit "Edit", class: "btn" %></a>
<% end %>

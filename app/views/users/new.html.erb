<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<p class="second_title">Create Users</p>

<div class="container-fluid"><font size="2">
  <div class="top">
  <br><br><br><br><br><br><br><br><br><br>

  <%= form_with(model: @user, local: true) do |f| %>
    <a><%= f.text_field :name, :placeholder => "User name", class: "text_field" %></a>
    <a><%= f.email_field :email, :placeholder => "landescape@landescape.com", class: "text_field" %></a>
    <a><%= f.password_field :password, :placeholder => "8文字以上", class: "text_field" %></a>
    <a><%= f.password_field :password_confirmation, :placeholder => "Password again", class: "text_field" %></a>

    <br><br>
    <div class="row">
      <span class="col-xs-4"></span>
      <span class="col-xs-1"><%= f.submit "Create", class: "btn" %></span>
      <span class="col-xs-2"></span>
      <span class="col-xs-1"><%= link_to 'Back', new_session_path, class: "menu" %></span
      <span class="col-xs-4"></span>
    </div>
  <% end %>

  </div>
</div>

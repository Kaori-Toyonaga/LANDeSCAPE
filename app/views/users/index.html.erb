<h4 class="sub-title">Users</h4>

<div class="container-fluid"><font size="2">
  <div class="top">
  <br><br>
    <div class="row">
<table>
  <tr>
    <th class="box_2"></th>
    <th class="box_3">User name</th>
    <th class="box_2">check?</th>
  </tr>

<% @users.each do |user| %>

  <tr>
    <td class="box_2"><%= link_to image_tag(user.image.url, size: '50x50'), user_path(user) if user.image && user.image.url %></td>
    <td class="box_3"><%= user.name %></td>
    <td class="box_2"><%= render 'follow_form', user: user %></td>
  </tr>

<% end %>
</table>
<br>

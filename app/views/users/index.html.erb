<h4>Users</h4>

<br>
<table>
  <tr>
    <th></th>
    <th><%= t('user.name') %></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to image_tag(user.image.url, size: '50x50'), user_path(user) if user.image && user.image.url %><td>
    <td><%= user.name %></td>
    <td><%= render 'follow_form', user: user %></td>
  </tr>
<% end %>
</table>

<div class="sub-title">
  <p class="second_title"><%= link_to current_user.name, user_path(current_user) %></p>
  <br><br>
</div>

<div class="search">
  <%= form_with url: favorites_path, method: :get, local: true do |form| %>
    <%= form.select :prefecture, Favorite.prefectures.keys %>
    <%= form.text_field :spotname, :placeholder => "スポット名で検索…", class: "text_field" %>
    <%= form.select("tag_id", Tag.pluck(:title, :id), { include_blank: true, selected: 1 }) %>
    <%= form.submit 'Search', title: nil, class: "btn" %> <%= link_to image_tag('clear.png', size: '48x48'), favorites_path  %>
  <% end %>
</div>

<div class="container-fluid">
  <div class="top">
    <div class="row">
    <% @favorites.each do |favorite| %>
      <div class="col-md-3">
        <p><%= link_to image_tag(favorite.post.image.url, size: '200x200'), post_path(favorite.post.id) %></p>
        <p><%= favorite.post.spotname %></p>
        <p><%= favorite.post.prefecture %></p>
      </div>
    <% end %>
    </div>
  </div>
</div>

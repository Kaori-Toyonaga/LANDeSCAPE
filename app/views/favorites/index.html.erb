<h4>My Clips</h4>

<p><%= notice %></p>

<% @favorites.each do |favorite| %>
  <p>
    <span>image<%= link_to '🔍', post_path(favorite.post.id) %></span>
  </p>
  <p>
    <% unless favorite.post.user_id == current_user.id %>
      <% if @favorite.present? %>
        <span><%= link_to image_tag('clip_on', size: '25x25'), favorite_path(id: @favorite.id), method: :delete %></span>
      <% else %>
        <span><%= link_to image_tag('clip_off', size: '25x25'), favorites_path(post_id: favorite.post.id), method: :post %></span>
      <% end %>
    <% end %>

    <%= favorite.post.spot_name %>
  </p>
  <p><%= favorite.post.prefecture %><%= favorite.post.address %></p>
<% end %>

<h4><%= link_to current_user.name, user_path(current_user) %></h4>

<p><%= notice %></p>

<% @posts.each do |post| %>
  <p>
    <span>image<%= link_to '🔍', post_path(post.id) %></span>
  </p>
  <p>
    <% unless post.user_id == current_user.id %>
      <% if @favorite.present? %>
        <span><%= link_to image_tag('clip_on', size: '25x25'), favorite_path(id: @favorite.id), method: :delete %></span>
      <% else %>
      <% end %>
    <% end %>

    <%= post.spot_name %>
  </p>
  <p><%= post.prefecture %><%= post.address %></p>
<% end %>

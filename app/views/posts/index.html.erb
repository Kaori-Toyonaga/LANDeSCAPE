<h4><%= link_to current_user.name, user_path(current_user) %></h4>

<%= link_to image_tag('pin_on', size: '25x25'), new_post_path %>
<%= link_to 'New Tag', new_tag_path %>

<%= form_with url: posts_path, method: :get, local: true do |form| %>
  <%= form.select :prefecture, Post.prefectures.keys %>
  <%= form.text_field :spotname, :placeholder => "スポット名で検索…" %>
  <%= form.select("tag_id", Tag.pluck(:title, :id), { include_blank: true }) %>
  <%= form.submit 'Search', title: nil %> <%= link_to 'clear', posts_path %>
<% end %>

<% @posts.each do |post| %>
  <p>
    <span><%= link_to image_tag(post.image.url), post_path(post.id) %></span>
  </p>
  <p>
    <% unless post.user_id == current_user.id %>
      <% if @favorite.present? %>
        <span><%= link_to image_tag('clip_on', size: '25x25'), favorite_path(id: @favorite.id), method: :delete %></span>
      <% else %>
        <span><%= link_to image_tag('clip_off', size: '25x25'), favorites_path(post_id: post.id), method: :post %></span>
      <% end %>
    <% end %>

    <%= post.spotname %>
  </p>
  <p><%= post.prefecture %><%= post.address %></p>
<% end %>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h3><%= pluralize(@user.errors.count, "つ") %>入力に誤りがあります。 </h3>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="sub-title">
  <p class="second_title2">ユーザー登録</p>
</div>

<div class="container-fluid"><font size="2">
  <div class="top">
  <br><br><br><br><br><br>

<%= form_with(model: [:admin, @user], local: true) do |f| %>
  <a><%= f.text_field :name, :placeholder => "旅　一太郎", class: "text_field" %></a>
  <a><%= f.email_field :email, :placeholder => "landescape@landescape.com", class: "text_field" %></a>
  <a><%= f.password_field :password, :placeholder => "8文字以上", class: "text_field" %></a>
  <a><%= f.password_field :password_confirmation, :placeholder => "再度同じパスワードを入力", class: "text_field" %></a>
  <br><br><br>

  <p><%= f.label :admin, '管理権限' %> <%= f.check_box :admin %></p>
  <br>
  <div class="row">
    <span class="col-xs-4"></span>
    <span class="col-xs-1"><%= f.submit "登録", class: "btn" %></span>
    <span class="col-xs-2"></span>
    <span class="col-xs-1"><%= link_to '戻る', admin_users_path(current_user.id), class: "menu" %></span>
    <span class="col-xs-4"></span>
  </div>
<% end %>

  </div>
</div>

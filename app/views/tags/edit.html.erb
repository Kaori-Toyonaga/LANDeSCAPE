<div class="sub-title">
  <p class="second_title2">タグ編集</p>
</div>

<%= form_with(model: @tag, local: true) do |form| %>

<div class="container-fluid"><font size="2">
  <div class="top">
  <br><br>
    <div class="row">
      <table>
        <p>
          <span><%= form.label :title, 'タグ名 :' %></span>
          <span><%= form.text_field :title, class: "text_field" %></span>
        </p>
      </table>
    </div>

    <div class="row">
      <span class="col-xs-4"></span>
      <span class="col-xs-1"><%= form.submit "登録", class: "btn" %></span>
      <span class="col-xs-2"></span>
      <span class="col-xs-1"><%= link_to "戻る", tags_path, class: "menu" %></span>
      <span class="col-xs-4"></span>
    </div>
  </div>
</div>
<% end %>

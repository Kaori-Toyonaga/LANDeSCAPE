<!DOCTYPE html>
<html>
  <head>
    <title>Landescape</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= include_gon %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%#= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%#= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <script src="https://maps.google.com/maps/api/js?key=<%= ENV['GOOGLE_MAP_API_KEY'] %>"></script>
  <script src="https://cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <script src='https://cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-o%>nly/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
  </head>

  <header class="header clearfix">
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>

    <div class="container">
      <div class="row" class="menu_bar">
        <span class="col-xs-3"><a class="logo"><%= image_tag('Title.png') %></a></span>
        <span class="col-xs-7"></span>

        <% if logged_in? %>
          <span class="col-xs-1"><%= link_to "Logout", session_path(current_user.id), method: :delete, class: "menu" %></span>
          <% if current_user.admin? %>
            <span class="col-xs-1"><%= link_to 'Admin', admin_users_path(current_user.id), class: "menu"  %></span>
          <% else %>
          <% end %>
        <% else %>
          <span class="col-xs-1"><%= link_to "Sign up", new_user_path, class: "menu"  %></span>
          <span class="col-xs-1"><%= link_to "Login", new_session_path, class: "menu"  %></span>
        <% end %>
  </header>

  <body>
    <%= yield %>

    <footer>
      <p>LAND e SCAPE Inc. All rights reserved</p>
    </footer>

  </body>
</html>

<!DOCTYPE html>
<html>
  <head>
    <title>Landescape</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= include_gon %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%#= stylesheet_link_tag    'application', media: 'all' %>
    <%#= javascript_include_tag 'application' %>

    <script src="https://maps.google.com/maps/api/js?key=<%= ENV['GOOGLE_MAP_API_KEY'] %>"></script>
    <script src="https://cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='https://cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-o%>nly/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
  </head>

  <header class="headerfixed">
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>

    <a class="logo"><%= image_tag('Title.png') %></a>

      <% if logged_in? %>
        <span><%= link_to "Logout", session_path(current_user.id), method: :delete, class: "menu1" %></span>
        <span><%= link_to image_tag('home', size: '48x48'), posts_path, class: "home" %></span>
        <span><%= link_to image_tag('pin_icon', size: '48x48'), new_post_path, class: "pin" %></span>
        <span><%= link_to image_tag('user', size: '48x48'), users_path, class: "user" %></span>
        <% if current_user.admin? %>
          <span><%= link_to image_tag('admin', size: '45x45'), admin_users_path(current_user.id), class: "admin" %></span>
        <% else %>
        <% end %>
      <% else %>
        <span><%= link_to "Sign up", new_user_path, class: "menu1" %></span>
        <span><%= link_to "Login", new_session_path, class: "menu2" %></span>
      <% end %>

  </header>

  <body>
    <%= yield %>

    <footer>
      <p>LAND e SCAPE Inc. All rights reserved</p>
    </footer>

  </body>
</html>
